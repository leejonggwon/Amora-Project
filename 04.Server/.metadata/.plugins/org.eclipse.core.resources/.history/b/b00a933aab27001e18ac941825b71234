<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
<style type = "text/css"> /* type="text/css"는 해당 스타일 시트가 CSS임을 나타냅니다 */

/* CSS주석 */

</style>
<script type = "text/javascript">  
    // type="text/javascript"는 해당 스크립트가 JavaScript임을 나타냅니다.
	// js 주석
</script>
</head>
<% 
	// 이 공간은 자바코드만 쓸 수 있는 공간이다 
	int num = 100;
	String name = "호두아빠";
%>

<%
	int age = 20;

	int size = 20;
	String color = "yellow";
%>

<%= name %> <!-- 호두아빠 출력 --> 
<%= age %> <!-- 20 출력 -->

<hr size="20" color ="red"> <!-- <hr>은 선을 만들어준다 -->

<hr size="<%= size %>" color ="red"> <!-- size="<%= size %>"로 해도 size값은 같다 -->

<body>
	<!--  각종 주석 설명 -->
	<!--  HTML 주석 -->
	<%-- JSP 주석 --%>
	<%-- JSP 주석은 개발자 환경에서도 노출되지 않는다 --%>
	
	


	<h1>오늘은 금요일</h1>
</body>
</html>














