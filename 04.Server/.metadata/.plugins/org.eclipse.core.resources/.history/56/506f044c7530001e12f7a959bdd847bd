     <!-- URL?name=value ger방식은 URL뒤에 ?에서 name은 value형식으로 넘어가는게 get방식 =이걸 쿼리스트링방식이라고 한다 
     질문하는 문자열로 보안에 취약하다 장점으론 url이 보이므로 url을 공유할 수 있다  -->
     
     <!-- post방식은 패킷의 바디라는곳에 담겨서 간다 그렇기 때문에 많은양의 데이터를 보낼 수 있고 그리고 보안에 강력하다 
     검색한 기록이 남지 않으니 url를 공유할 수 없다 -->

	<form action ="EX08Join" method ="post">  <!--id, pw, name 입력데이터가 EX08Join으로 입력된다  -->
		<fieldset> <!-- 선으로 박스만들어주는 태그 -->
			<legend>Join page</legend> <!-- <fieldset>안에 제목넣는 태그 -->
			<table>
				<tr>
					<td>ID</td> <!--데이터를 넣을때는 <td>를 넣는다  -->
					<td><input type="text" name = "id"></td>
				</tr>
				<tr>
					<td>PW</td> 
					<td><input type="text" name = "pw"></td>
				</tr>
				<tr>
					<td>NAME</td> 
					<td><input type="text" name = "name"></td>
				</tr>
				<tr>
					<td>EMAIL</td> 
					<td><input type="text" name = "email"></td>
				</tr>
				<tr>
					<td>TEL</td> 
					<td><input type="text" name = "tel"></td>
				</tr>
				<tr>
					<td>GENDER</td> 
					<td>
						MAN<input type="radio" name = "gender" value = "MAN" > <!-- name을 같이 하면 체크가 겹치지 않는다 -->
						WOMEN<input type="radio" name = "gender" value = "WOMEN" >
					</td>
				</tr>
				<tr>
					<td>HOBBY</td> 
					<td>
						SPORT<input type="checkbox" name = "hobby" value = "SPORT" > 
						STUDY<input type="checkbox" name = "hobby" value = "STUDY" >
						EATING<input type="checkbox" name = "hobby" value = "EATING" >
					</td>
				</tr>
				<tr>
					<td>BIRTHDAY</td> 
					<td><input type="date" name = "birthday"> </td> <!--날짜선택 -->
				<tr>
					<td>COLOR</td> 
					<td><input type="color" name = "color"> </td> <!--색상선택 -->
				</tr>
				<tr>
					<td>COUNTRY</td>  
					<td>
						<select name ="country" >
							<option>KOREA</option>  <!--클릭시 선택하는 목록  -->
							<option>JAPAN</option>
							<option>CHINA</option>
						</select>
					</td>
				</tr>
				<tr>
					<td>TALK</td>  
					<td>
						<textarea name = "talk" rows = "5" cols = "23"></textarea> <!--rows행 cols열 -->
					</td>
				</tr>
				<tr>
					<td colspan = "2">
						<input type = "submit" value ="제출합니다"> <!--제출-->
						<input type = "reset" value ="취소합니다"> <!--초기화-->
						
					
					</td>
				</tr>
			
				
				
